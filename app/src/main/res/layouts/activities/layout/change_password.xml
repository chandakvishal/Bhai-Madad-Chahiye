<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ChangePassword"
    android:background="@drawable/background_purple_texture">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/CornflowerBlue"
            android:text="@string/cancel"
            android:textColor="@color/Wheat"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:targetApi="lollipop"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/changePassBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/newPass"
            android:backgroundTint="@color/IndianRed"
            android:text="@string/change_password"
            android:textColor="@color/Wheat"
            android:paddingRight="20dp"
            android:textSize="20sp"
            tools:targetApi="lollipop" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:textColor="#000000"
            android:layout_marginTop="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/changePassBtn" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>