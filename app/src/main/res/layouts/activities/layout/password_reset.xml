<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_purple_texture"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="@string/forgot_password"
            android:textAlignment="center"
            android:textColor="@color/Wheat"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp" />

        <EditText
            android:id="@+id/passResetEmail"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/Aqua"
            android:hint="@string/prompt_email"
            android:drawableLeft="@drawable/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/Wheat"
            tools:targetApi="lollipop"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="87dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/resetPassBtn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/CornflowerBlue"
            android:text="@string/reset"
            android:textAlignment="center"
            android:textColor="@color/Wheat"
            android:textSize="20sp"
            tools:targetApi="lollipop"
            android:layout_below="@+id/passResetEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="46dp" />

        <TextView
            android:id="@+id/backToLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/CornflowerBlue"
            android:text="@string/back_to_login"
            android:textColor="@color/Wheat"
            android:textSize="20sp"
            tools:targetApi="lollipop"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
